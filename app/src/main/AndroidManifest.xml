<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.moravian.csci299.lapCounter">

    <application
        android:name="edu.moravian.csci299.lapCounter.RunnerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LapCounter">
        <activity android:name="edu.moravian.csci299.lapCounter.HelpActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name="edu.moravian.csci299.lapCounter.RunningActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name="edu.moravian.csci299.lapCounter.StartActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>